{
  "name": "ziltag-plugin",
  "version": "0.2.0",
  "description": "",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "gulp serve",
    "build:staging": "gulp build:staging",
    "build:production": "gulp build:production",
    "deploy": "gulp deploy",
    "docker:build": "docker-compose -f docker-compose.build.yml down && docker-compose -f docker-compose.build.yml build",
    "docker:serve": "CONTAINER_NAME=ziltag-plugin_serve PORT=${PORT:=4000} docker-compose up",
    "docker:npm": "docker exec ziltag-plugin_serve npm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ziltag/ziltag-plugin.git"
  },
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/ziltag/ziltag-plugin/issues"
  },
  "homepage": "https://github.com/ziltag/ziltag-plugin#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.23.1",
    "cssnano": "^3.7.1",
    "cz-conventional-changelog": "^1.1.6",
    "del": "^1.2.0",
    "eslint": "^3.9.1",
    "eslint-plugin-react": "^6.6.0",
    "exports-loader": "^0.6.3",
    "file-loader": "^0.9.0",
    "gulp": "^3.9.1",
    "gulp-env": "^0.4.0",
    "gulp-gh-pages": "^0.5.4",
    "imports-loader": "^0.6.5",
    "postcss-calc": "^5.3.1",
    "postcss-cssnext": "^2.7.0",
    "postcss-loader": "^0.9.1",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-stream": "^3.2.0"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "bowser": "^1.6.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.23.1",
    "custom-event-polyfill": "^0.3.0",
    "hashids": "^1.1.1",
    "mobile-detect": "^1.3.2",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-actions": "^0.9.1",
    "redux-saga": "^0.10.2",
    "whatwg-fetch": "^1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "loose": true
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime",
      "array-includes"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "react/display-name": "off",
      "react/prop-types": "off"
    },
    "globals": {
      "SERVER_ADDRESS": false,
      "API_ADDRESS": false,
      "MAX_Z_INDEX": false
    }
  }
}
